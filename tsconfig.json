{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2021"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.ts","src",
  "__tests__",
  "jest.setup.ts"],
  "exclude": ["node_modules"]
}
